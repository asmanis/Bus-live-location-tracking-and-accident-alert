  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDvkOE9XBZeoqaxYKLHFWlzNPPEaitwL6g"></script>

  <script>
    function initMaps() {

      const buses = [
        { id: "map1", name: "Bus 1", lat: 37.9838, lng: 23.7275 }, // Syntagma
        { id: "map2", name: "Bus 2", lat: 37.9765, lng: 23.7220 }, // Monastiraki
        { id: "map3", name: "Bus 3", lat: 37.9920, lng: 23.7065 }  // Kerameikos
      ];

      buses.forEach(bus => {
        const position = { lat: bus.lat, lng: bus.lng };

        const map = new google.maps.Map(document.getElementById(bus.id), {
          zoom: 14,
          center: position
        });

        new google.maps.Marker({
          position: position,
          map: map,
          title: bus.name
        });
      });
    }
  </script>
</head>

<body onload="initMaps()">

